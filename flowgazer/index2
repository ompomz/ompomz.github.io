    span.quote-prefix {
      font-style: italic;
      font-weight: normal;
    }

    a {
      color: #0000ff;
    }

    .original-post-preview {
      margin-top: 5px;
      padding: 8px;
      background-color: #f0f0f0;
      border-left: 3px solid #ccc;
      font-size: 0.9em;
      font-style: normal;
      max-height: 100px;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .original-post-preview.loading {
      color: #888;
    }
